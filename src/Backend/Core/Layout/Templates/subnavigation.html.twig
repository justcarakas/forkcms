<ul class="nav navbar-nav navbar-sidebar">
  {% for mainItem in navigation|filter(item => item.active) %}
    {% for subItem in mainItem.children %}
      <li class="nav-item{% if subItem.active %} active{% endif %}">
        <a class="nav-link" href="/private/{{ LANGUAGE }}/{{ subItem.url }}">{{ ('lbl.'~subItem.label)|trans|ucfirst }}</a>
        {% if subItem.children is defined and subItem.active %}
          <ul class="nav subnav">
            {% for item in subItem.children %}
              <li class="nav-item{% if item.active %} active{% endif %}">
                <a class="nav-link" href="/private/{{ LANGUAGE }}/{{ item.url }}">{{ ('lbl.'~item.label)|trans|ucfirst }}</a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  {% endfor %}
</ul>
