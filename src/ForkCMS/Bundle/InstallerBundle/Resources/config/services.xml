<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <defaults autowire="true" autoconfigure="true" />
    <service id="ForkCMS\Bundle\InstallerBundle\Service\RequirementsChecker" public="true">
      <argument>%kernel.project_dir%/</argument>
    </service>

    <service id="ForkCMS\Bundle\InstallerBundle\Controller\InstallerController" public="true">
      <tag name="container.service_subscriber" />
      <tag name="controller.service_arguments" />
    </service>

    <service id="ForkCMS\Bundle\InstallerBundle\Service\ForkInstaller" public="true">
      <argument type="service" id="Symfony\Component\DependencyInjection\ContainerInterface" />
    </service>

    <service id="ForkCMS\Bundle\InstallerBundle\Console\PrepareForReinstallCommand">
      <argument type="service" id="database" />
      <tag name="console.command" />
    </service>

    <service id="ForkCMS\Bundle\InstallerBundle\Console\CheckRequirementsCommand">
      <argument type="service" id="ForkCMS\Bundle\InstallerBundle\Service\RequirementsChecker" />
      <tag name="console.command" />
    </service>

    <service id="ForkCMS\Bundle\InstallerBundle\Console\InstallCommand">
      <argument type="service" id="ForkCMS\Bundle\InstallerBundle\Service\ForkInstaller" />
      <argument>%kernel.project_dir%</argument>
      <argument>%fork.is_installed%</argument>
      <argument type="service" id="ForkCMS\Bundle\InstallerBundle\Console\PrepareForReinstallCommand" />
      <tag name="console.command" />
    </service>
  </services>
</container>
