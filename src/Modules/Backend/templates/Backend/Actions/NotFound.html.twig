{% extends '@Backend/base/empty.html.twig' %}

{% block bodyAttributes %}
  id="{{ bodyID }}"
  class="{{ bodyClass }}"
{% endblock %}

{% block content %}
  <div id="root">
    <nav class="navbar navbar-dark align-content-center justify-content-center">
      <a class="navbar-brand" href="{{ path('backend') }}">
        <h1 class="text-white">{{ SITE_TITLE }}</h1>
      </a>
    </nav>
    <div class="bg-primary">
      <div class="container">
        <div class="d-flex justify-content-center">
          <img src="{{ asset('build/backend/images/404.png') }}" class="img-fluid" alt="404">
        </div>
      </div>
    </div>

    <div class="container text-center">
      <h2 class="display-3 pt-5">{{ message|trans }}</h2>
    </div>
  </div>
{% endblock %}
