{% import 'Core/Layout/Templates/Alerts.html.twig' as alerts %}
{% import "Core/Layout/Templates/Macros.html.twig" as macro %}

<section class="module-profiles block-profiles-change-password">
  {% block block_heading %}{% endblock %}

  {% block block_alerts %}
    <div class="block-alerts">
      {% if updatePasswordSuccess %}
        {{ alerts.alert('success', 'msg.UpdatePasswordIsSuccess'|trans) }}
      {% endif %}
      {% if updatePasswordHasFormError %}
        {{ alerts.alert('danger', 'err.FormError'|trans) }}
      {% endif %}
    </div>
  {% endblock %}

  {% block block_body %}
    <div class="block-body">
      {% form updatePassword %}
      <fieldset>
        <div class="form-group{% if txtOldPasswordError %} has-error{% endif %}">
          <label class="control-label" for="oldPassword">
            {{ 'lbl.OldPassword'|trans|ucfirst }}{{ macro.required }}
          </label>
          {% form_field old_password %}
          {% form_field_error old_password %}
        </div>
        <div class="form-group{% if txtNewPasswordError %} has-error{% endif %}">
          <label class="control-label" for="newPassword">
            {{ 'lbl.NewPassword'|trans|ucfirst }}{{ macro.required }}
          </label>
          {% form_field new_password %}
          {% form_field_error new_password %}
        </div>
        <div class="form-group{% if txtVerifyNewPasswordError %} has-error{% endif %}">
          <label class="control-label" for="verifyNewPassword">
            {{ 'lbl.VerifyNewPassword'|trans|ucfirst }}{{ macro.required }}
          </label>
          {% form_field verify_new_password %}
          {% form_field_error verify_new_password %}
        </div>
        <div class="form-group">
          <div class="form-check">
            {% form_field show_password %}
            <label for="showPassword" class="form-check-label">{{ 'lbl.ShowPassword'|trans|ucfirst }} </label>
          </div>
        </div>
        <div class="form-group">
          <input class="btn btn-primary" type="submit" value="{{ 'lbl.Save'|trans|ucfirst }}" />
        </div>
      </fieldset>
      {% endform %}
    </div>
  {% endblock %}

  {% block block_footer %}{% endblock %}
</section>
