{% extends 'Layout/Templates/pages.html.twig' %}
{% import 'Layout/Templates/macros.html.twig' as macro %}

{% block pagesTree %}
  {%  include 'Pages/Layout/Templates/PageTree.html.twig' with {'overview': true} %}
{% endblock %}

{% block actionbar %}
  {% if isAllowedAction('PageAdd') %}
    <div class="btn-toolbar justify-content-end">
      <div class="btn-group" role="group">
        {{ macro.buttonIcon(geturl('PageAdd'), 'plus-square', 'lbl.AddPage'|trans|ucfirst) }}
      </div>
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  {% if dgDrafts %}
    <div class="content-block content-block-pb">
      <div class="content-title">
        <h2>{{ 'lbl.Drafts'|trans|ucfirst }}</h2>
      </div>
      <div class="responsive-table">
        {{ dgDrafts|raw }}
      </div>
    </div>
  {% endif %}
  <div class="content-block content-block-pb">
    {% if dgRecentlyEdited %}
      <div class="content-title">
        <h2>{{ 'lbl.RecentlyEdited'|trans|ucfirst }}</h2>
      </div>
      <div class="resposive-table">
        {{ dgRecentlyEdited|raw }}
      </div>
    {% endif %}
  </div>
  {% if not dgRecentlyEdited %}
    <p>{{ 'msg.NoItems'|trans|ucfirst }}</p>
  {% endif %}
{% endblock %}

