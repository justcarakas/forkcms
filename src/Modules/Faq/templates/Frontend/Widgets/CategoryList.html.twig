{#
  variables that are available:
  - {{ widgetFaqCategoryList }}: contains an array with all posts for the category, each element contains data about the post
#}
{% if widgetFaqCategoryList %}
  <aside class="module-faq widget-faq-category-list">
    {% block widget_heading %}
      <header class="widget-heading">
        <h2 class="h3">{{ 'lbl.Faq'|trans }}: {{ widgetFaqCategory.title }}</h2>
      </header>
    {% endblock %}

    {% block widget_body %}
      <div class="widget-body">
        <ul class="list-group">
          {% for widgetFaqCategoryList in widgetFaqCategoryList %}
            <li class="list-group-item list-group-item-action">
              <a href="{{ widgetFaqCategoryList.full_url }}">
                {{ widgetFaqCategoryList.question }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endblock %}

    {% block widget_footer %}{% endblock %}
  </aside>
{% endif %}
